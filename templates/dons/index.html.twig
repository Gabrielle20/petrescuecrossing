{% extends 'base.html.twig' %}

{% block title %}Faire un don{% endblock %}

{% block head_css %}
    <!-- Copy CSS from https://getbootstrap.com/docs/4.4/getting-started/introduction/#css -->
{% endblock %}

{% block head_js %}
    <!-- Copy JavaScript from https://getbootstrap.com/docs/4.4/getting-started/introduction/#js -->
{% endblock %}

{% block body %}
    <style>
        body{
            background-image: url("../img/bg-animals.jpg");
            bacground-size: cover;
            position: relative;

        }
        .btn-don {
            text-align: center;
            font: 18px/1.5 sans-serif;
            margin-top: 5%;
            margin-bottom: 5%;
            margin-left: auto;
            margin-right: auto;
            padding: 15px 0;
            float: none;
            background-color: #198754;
            max-width: 45%;
            border-radius: 10px;
            color: white;
        }
        .btn-don:hover{
            color: white;
        }
        .card{margin: 0 auto; float: none; width: 50%;}
    </style>
    <div class="bg-img">
        <div class="btn-don btn-don-header">
            <a href="" class="btn-don text-uppercase" target="_blank" id="bouton-don">
                <i class="fas fa-heart"></i>
                Cagnotte actuelle: {{montant}}â‚¬
            </a>
        </div>

        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <strong>Faire un don</strong>
                </div>

                <div class="card-body card-block">
                    <div class="row form-group">
                        <div class="col col-md-8">
                            {{ form_start(form) }}
                            {{ form_row(form.montant) }}
                            <br/>
                            <button type="submit" class="btn btn-success">Valider</button>
                            {{ form_end(form) }}
                        </div>
                    </div>

                </div>
                <div class="card-footer">
                    <div class="alert">
                        {% for type, messages in app.flashes %}
                            <div class="alert alert-{{type}} alert-dismissible fade show" role="alert">
                                {% for message in messages %}
                                    <strong>{{message}}</strong>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                {% endfor %}
                            </div>
                        {% endfor %}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}