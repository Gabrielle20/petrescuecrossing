{% extends 'base.html.twig' %}

{% block title %}Hello AdoptionListController!{% endblock %}

{% block body %}
<style>
#top { background-image: url({{ asset("img/footer_bg.jpg") }}); display: flex; align-items: center; justify-content: center; margin-bottom: 100px; }
#top img { width: 600px; }
.card-container { width: 90rem; margin: 30px; margin-bottom: 330px; }
.card { background-color: #F4F1EA; border: 0.1px solid white; }
.card-size { margin-bottom: 400px; }
.card img { width: 250px; margin-top: 20px;  }
.card-content ul { border-bottom: 1px solid #e1e1e1; list-style-type: none; padding-bottom: 15px; margin-bottom: 15px; display: flex; align-items: center; justify-content: space-between;  }
.card-content { background: #fff; margin: -120px 24px 0; padding: 25px 25px 30px; position: relative; box-shadow: 0px 9px 34.3px 0.7px rgb(0 0 0 / 15%); border-radius: 10px;  }
#center { margin-left: 130px; margin-top: 15px; border-radius: 10px; width: 100px; box-shadow: 0px 9px 34.3px 0.7px rgb(0 0 0 / 5%); border: 1px solid #e1e1e1; }
</style> 

{% for type, messages in app.flashes %}
    <div class="alert alert-{{type}} alert-dismissible fade show" role="alert">
        {% for message in messages %}
            <strong>{{message}}</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        {% endfor %}
    </div>
{% endfor %}

<div id="top">
  <img src="{{ asset("img/cleanDog.png") }}">
  <h1>Notre Shop</h1>
</div>


<div class= "card-container container-fluid mx-auto">
	<div class= "row d-inline-flex">
		{% for article in articles %}
			<div class ="card-size col-lg-4 col-md-6">
				<div class="card h-100">
					<img class="card-img-top mx-auto d-block" src="{{ asset("img/dogFood1.png") }}"/>
				</div>
				
				<div class="card-content">
					<h4 class="card-title text-center">{{article.nom}}</h4>
					<ul>
						<li><p>{{article.categorie}}</p></li>
						<li><p>{{article.prix}} €</p></li>
					</ul>
					<a href="{{ path('detail_product', {'id': article.id }) }}"><button id="center">Détails</button></a>	
					<a href="{{ path('ajout_panier', {'id': article.id }) }}"><button id="center">Acheter</button></a>
				</div>
			</div>
		{% endfor %}
  </div>  
</div>

{% endblock %}
