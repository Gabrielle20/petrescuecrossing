{% extends "base.html.twig" %}

{% block title %} Mes Dossiers d'adoption {% endblock %}


{% block body %}


    <div class="alert">
        {% for type, messages in app.flashes %}
            <div class="alert alert-{{type}} alert-dismissible fade show" role="alert">
                {% for message in messages %}
                    <strong>{{message}}</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                {% endfor %}
            </div>
        {% endfor %}
    </div>

    <div class="row">
        <div class="div-center">
            <div class="col-md-8 div-center" style="margin-top:3rem;">
                <h1 class="text-center" style="margin-bottom:2rem;">Liste des dossiers</h1>
                <div class="table-wrap table-responsive">
                    <table class="table table-borderless">
                        <thead>
                            <tr class="p-0">
                                <td class="text-center w100 p-0 py-2" scope="col"><small class="text-muted">NÂ° DOSSIER</small> </td>
                                <td class="text-center w100 p-0 py-2" scope="col"><small class="text-muted">USER</small> </td>
                                <td class="text-center w100 p-0 py-2" scope="col"><small class="text-muted">DATE</small> </td>
                                <td class="text-center w100 p-0 py-2" scope="col"><small class="text-muted">STATUT</small></td>
                                <td class="text-center w100 p-0 py-2" scope="col"><small class="text-muted"></small></td>
                            </tr>
                        </thead>
                        <tbody>
                            {% for dossier in dossiers %}
                                <tr class="border-bottom bg-white">
                                    <td class="text-center">
                                        {{ dossier.id }}
                                    </td>
                                    <td class="text-center"><span class="text-muted">{{ dossier.user.nom }}</span></td>
                                    <td class="text-center"><span class="text-muted">{{ dossier.date|format_datetime() }}</span></td>
                                    <td class="text-center"><span>{{ dossier.statut }}
                                    </span> </td>
                                    <td class="text-center">
                                        <a href="{{ path('dossier_single', {id: dossier.id} )}}"><i class="fas fa-eye"></i></a>
                                    </td>
                                </tr>
                            {% else %}
                                <td colspan="5"><p>Il n'y a pas de dossiers pour le moment</p></td>
                            {% endfor %}
                        </tbody>
                    </table>
                   
                </div>
            </div>
        </div>
    </div>
{% endblock %}