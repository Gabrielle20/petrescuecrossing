{% extends "base.html.twig" %}


{% block body %}


    <div class="container">

        <div class="alert">
            {% for type, messages in app.flashes %}
                <div class="alert-{{ type }}">
                    {% for message in messages %}
                        <p>{{ message }}</p>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>



        <div class="div-center">
            <div class="security-forms">
                <h2>Connexion</h2>

                <form action="{{ path('security_connexion') }}" method="POST">
                    <div class="form-group">
                        <label for="_username">Email</label>
                        <input placeholder="Email"  required name="_username" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="_password">Mot de Passe</label>
                        <input placeholder="Mot de passe"  required name="_password" type="password" class="form-control">
                    </div>
                    <br>
                    <div class="form-group">
                        <button class="btn btn-success" type="submit">Connexion</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


{% endblock %}